---
import { getTranslation } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'pt';
}

const { lang = 'en' } = Astro.props;
---

<section id="hero" class="relative bg-cover bg-center text-white min-h-screen lg:h-screen flex flex-col lg:flex-row lg:items-center lg:justify-center px-6 overflow-hidden" style="background-image: url('/background.png')">
  <div class="absolute inset-0 bg-black/50"></div>
  
  <div class="relative z-10 w-full max-w-4xl flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 py-20 lg:py-0">
    <!-- Main Hero Content -->
    <div class="flex-1 max-w-xl">
      <!-- Logo -->
      <img src="/logo_horizontal_nobg.svg" alt="Heroes Of The Sea Logo" class="h-32 mb-8 opacity-95" />
      
      <!-- Team Number -->
      <p class="text-xl sm:text-2xl md:text-3xl font-bold mb-4 text-white">
        {getTranslation(lang, 'teamNumber')}
      </p>
      
      <!-- Tagline -->
      <p class="text-lg sm:text-xl text-white mb-8 leading-relaxed">
        {getTranslation(lang, 'tagline')}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap gap-4">
        <a 
          href={`/${lang === 'pt' ? 'pt/' : ''}donate`} 
          class="inline-block bg-hots-green hover:bg-hots-green/90 text-white font-bold text-lg py-3 px-8 rounded-lg transition-colors duration-300 focus:outline-none focus:ring-4 focus:ring-hots-green/50"
        >
          {getTranslation(lang, 'supportButton')}
        </a>
        <a 
          href={`/${lang === 'pt' ? 'pt/' : ''}team`} 
          class="inline-block bg-slate-700 hover:bg-slate-600 text-white font-bold text-lg py-3 px-8 rounded-lg transition-colors duration-300 focus:outline-none focus:ring-4 focus:ring-slate-500/50"
        >
          {getTranslation(lang, 'meetTheTeamButton')}
        </a>
      </div>
    </div>

    <!-- Right Side Info Box (hidden on mobile) -->
    <div class="hidden lg:block flex-shrink-0">
      <div class="bg-black/40 backdrop-blur-md border border-slate-600 rounded-2xl p-8 w-80">
        <div class="space-y-6">
          <div>
            <p class="text-3xl font-bold text-hots-green mb-1">ğŸ¤–</p>
            <h3 class="font-bold text-lg text-white mb-1">{getTranslation(lang, 'advancedRobotics')}</h3>
            <p class="text-sm text-slate-300">{getTranslation(lang, 'advancedRoboticsDesc')}</p>
          </div>
          <div>
            <p class="text-3xl font-bold text-hots-green mb-1">ğŸŒ</p>
            <h3 class="font-bold text-lg text-white mb-1">{getTranslation(lang, 'internationalStage')}</h3>
            <p class="text-sm text-slate-300">{getTranslation(lang, 'internationalStageDesc')}</p>
          </div>
          <div>
            <p class="text-3xl font-bold text-hots-green mb-1">ğŸ“</p>
            <h3 class="font-bold text-lg text-white mb-1">{getTranslation(lang, 'studentInnovation')}</h3>
            <p class="text-sm text-slate-300">{getTranslation(lang, 'studentInnovationDesc')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Info Section (shown on small screens) -->
  <div class="lg:hidden relative z-10 w-full max-w-4xl pb-20">
    <div class="grid grid-cols-1 gap-4">
      <div class="bg-black/40 backdrop-blur-md border border-slate-600 rounded-xl p-6">
        <p class="text-2xl font-bold text-hots-green mb-2">ğŸ¤–</p>
        <h3 class="font-bold text-lg text-white mb-1">{getTranslation(lang, 'advancedRobotics')}</h3>
        <p class="text-sm text-slate-300">{getTranslation(lang, 'advancedRoboticsDesc')}</p>
      </div>
      <div class="bg-black/40 backdrop-blur-md border border-slate-600 rounded-xl p-6">
        <p class="text-2xl font-bold text-hots-green mb-2">ğŸŒ</p>
        <h3 class="font-bold text-lg text-white mb-1">{getTranslation(lang, 'internationalStage')}</h3>
        <p class="text-sm text-slate-300">{getTranslation(lang, 'internationalStageDesc')}</p>
      </div>
      <div class="bg-black/40 backdrop-blur-md border border-slate-600 rounded-xl p-6">
        <p class="text-2xl font-bold text-hots-green mb-2">ğŸ“</p>
        <h3 class="font-bold text-lg text-white mb-1">{getTranslation(lang, 'studentInnovation')}</h3>
        <p class="text-sm text-slate-300">{getTranslation(lang, 'studentInnovationDesc')}</p>
      </div>
    </div>
  </div>
</section>
