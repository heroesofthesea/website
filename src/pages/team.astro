---
import Layout from '../layouts/Layout.astro';
import TeamSection from '../components/Team.astro';
import Footer from '../components/Footer.astro';
import { getTranslation } from '../i18n/translations';
import '../styles/global.css';

const lang = 'en';
---

<Layout 
  lang={lang} 
  currentPage="team"
  title="Team - Heroes Of The Sea"
  description="Meet the talented students behind Heroes Of The Sea FTC Team #34200"
>
  <main>
    <!-- Back to Home Link -->
    <div class="bg-slate-900 border-b border-slate-800 px-6 py-4">
      <div class="max-w-5xl mx-auto">
        <a href="/" class="text-slate-400 hover:text-white transition-colors duration-300 text-sm flex items-center gap-2">
          <span>‚Üê</span>
          <span>{getTranslation(lang, 'backToHome')}</span>
        </a>
      </div>
    </div>

    <TeamSection lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
