---
import Layout from '../../layouts/Layout.astro';
import TeamSection from '../../components/Team.astro';
import Footer from '../../components/Footer.astro';
import { getTranslation } from '../../i18n/translations';
import '../../styles/global.css';

const lang = 'pt';
---

<Layout 
  lang={lang} 
  currentPage="team"
  title="Equipa - Heroes Of The Sea"
  description="Conheça os talentosos estudantes por trás da Equipa FTC Heroes Of The Sea #34200"
>
  <main>
    <!-- Back to Home Link -->
    <div class="bg-slate-900 border-b border-slate-800 px-6 py-4">
      <div class="max-w-5xl mx-auto">
        <a href="/pt/" class="text-slate-400 hover:text-white transition-colors duration-300 text-sm flex items-center gap-2">
          <span>←</span>
          <span>{getTranslation(lang, 'backToHome')}</span>
        </a>
      </div>
    </div>

    <TeamSection lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
