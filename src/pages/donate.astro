---
import Layout from '../layouts/Layout.astro';
import Fundraising from '../components/Fundraising.astro';
import Footer from '../components/Footer.astro';
import { getTranslation } from '../i18n/translations';
import '../styles/global.css';

const lang = 'en';
---

<Layout lang={lang} currentPage="donate">
  <main>
    <!-- Back to Home Link -->
    <div class="bg-slate-900 border-b border-slate-800 px-6 py-4">
      <div class="max-w-5xl mx-auto">
        <a href="/" class="text-slate-400 hover:text-white transition-colors duration-300 text-sm flex items-center gap-2">
          <span>‚Üê</span>
          <span>{getTranslation(lang, 'backToHome')}</span>
        </a>
      </div>
    </div>

    <!-- Header Section -->
    <section class="bg-slate-900 py-12 px-6 border-b border-slate-800">
      <div class="max-w-5xl mx-auto">
        <h1 class="font-logo font-black text-4xl sm:text-5xl md:text-6xl text-white mb-4 text-center">
          {getTranslation(lang, 'supportOurTeam')}
        </h1>
        <p class="text-lg text-slate-400 text-center max-w-2xl mx-auto">
          Help us compete at the highest levels of robotics and represent Portugal internationally.
        </p>
      </div>
    </section>

    <!-- Fundraising & Transparent Finances -->
    <Fundraising lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
